<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/img"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/head"
                    android:layout_marginTop="20dp"
                    android:textColor="#79133c"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#3e4145"
                        android:id="@+id/title"
                        android:textSize="24dp"
                        android:layout_weight="4"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="关注"
                        android:id="@+id/g"
                        android:elevation="2dp"
                        android:layout_marginLeft="60dp"
                        android:textSize="18dp"
                        android:background="@drawable/green_edborder"
                        android:textColor="#396"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/content"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发表评论"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="22dp"
                    android:textColor="#3e4145"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/ed1"
                    android:background="@drawable/edit_black"
                    android:layout_marginBottom="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="发表"
                    android:id="@+id/bu1"
                    />
            </LinearLayout>

            <com.example.yuanann.vegetable_app.UnScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"
                android:dividerHeight="2px"
                android:scrollbars="none"
                android:divider="#ccc"></com.example.yuanann.vegetable_app.UnScrollListView>
        </LinearLayout></ScrollView>

</LinearLayout>
